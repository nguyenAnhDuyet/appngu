<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Shadow color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Card background -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cardBackgroundColor" /> <!-- Main card background -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>

<!-- res/drawable/input_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/inputBackgroundColor" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="@color/inputBorderColor" />

    <!-- Corners (optional) -->
    <corners android:radius="8dp" />

    <!-- Padding (optional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
